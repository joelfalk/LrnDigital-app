<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Overview">

    <ImageView
        android:id="@+id/radar"
        android:layout_width="298dp"
        android:layout_height="175dp"
        android:contentDescription="radar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/radarchart" />

    <ImageView
        android:id="@+id/profile"
        android:layout_width="282dp"
        android:layout_height="186dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/profile" />

    <ImageView
        android:id="@+id/absence"
        android:layout_width="293dp"
        android:layout_height="75dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/radar"
        app:srcCompat="@drawable/presencedonut" />

    <Button
        android:id="@+id/englishBtn"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="42dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="42dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="108dp"
        android:background="@android:color/transparent"
        android:onClick="engelska"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/radar"
        app:layout_constraintEnd_toEndOf="@+id/radar"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/radar"
        app:layout_constraintTop_toTopOf="@+id/radar"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/swedishBtn"
        android:layout_width="50dp"
        android:layout_height="24dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/transparent"
        android:onClick="svenska"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/radar"
        app:layout_constraintEnd_toEndOf="@+id/radar"
        app:layout_constraintHorizontal_bias="0.425"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/radar"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/svenska"
        android:layout_width="355dp"
        android:layout_height="265dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/svenskagraf" />

    <ImageView
        android:id="@+id/engelska"
        android:layout_width="355dp"
        android:layout_height="261dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/graf" />

</android.support.constraint.ConstraintLayout>